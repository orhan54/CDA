
// Exercice factorielle avec la boucle TANT QUE
Programme TANT QUE

// Variable utiliser pour la factorielle avec la boucle TANT QUE
Variable ENTIER N
Variable ENTIER fac
Variable ENTIER resultat

// Définition des actions du bloc
DEBUT
	N = lireEntier()
	TANT QUE N < 0 FAIRE
		ecrire "le nombre dois etre positive"
	SINON N > 0 FAIRE
		fac := N
		resultat = N * fac
		fac--
	FIN TANT QUE fac = 1
	ecrire(<< La factoriellede >> N << avec TANT QUE est :>> resultat)
FIN
=============================================================================

// Exercice factorielle avec la boucle POUR
Programme POUR

// Variable utiliser pour la factorielle avec la boucle POUR
Variable ENTIER N
Variable fac
Variable ENTIER count
count := 1
Variable ENTIER i

// Définition des actions du bloc
DEBUT
	N = lireEntier()
	count := N
	POUR i ALLANT_DE N A count FAIRE
		count--
		resultat = N * count
		i++
	FIN POUR
FIN
=============================================================================

//Exercice avec la boucle REPETER
Programme REPETER

// Variable utiliser pour la factorielle avec la boucle REPETER
Variable ENTIER N
Variable ENTIER fac

// Définition des actions du bloc
DEBUT
	ecrire "saisir un nombre positive"
	N = lireEntier()
	REPETER
		SI N < 0 FAIRE
			ecrire "un nombre positive"
			N = lireEntier()
		SINON N > 0 FAIRE
			fac := N
			fac--
			resultat = N * fac
	JUSQU A fac := 1
FIN
